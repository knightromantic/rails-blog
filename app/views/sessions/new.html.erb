<h1>登录</h1>
<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.email_field :username, required: true %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  <div>
    <%= form.submit '登录' %>
  </div>
<% end %>
